{% from "_security_macros.jinja" import render_field_with_errors, render_field %}


{% extends "_base.jinja" %}

{# Use the build in flask security forms #}

{% block content_header %}<h1>Login</h1>{% endblock content_header %}
{% block content %}
  <div class="container-fluid">
      <div class="row">
        <div class = "col">

            <form action="{{ url_for_security('change_password') }}" class="form" method="POST" name="login_user_form">
                {{ change_password_form.hidden_tag() }}
                <label>Old Password</label>
                {{ render_field_with_errors(change_password_form.password) }}
                <label>New Password</label>
                {{ render_field_with_errors(change_password_form.new_password) }}
                <label>Confirm Password</label>
                {{ render_field_with_errors(change_password_form.new_password_confirm) }}
                {{ render_field(change_password_form.submit) }}
            </form>
        </div>
      </div>
  </div>
{% endblock content %}
