      <div class="row mb-3">
        <div class="col">
          <h3>Admin Zone</h3>

          {% call macros.create_card(title="Assigned Entities",additional_classes="card-info") %}
               <table class="table table-dark elevation-2 mb-3">
                <thead>
                  <tr>
                    <th>Groups</th>
                    <th>Users</th>
                  </tr>
                </thead>
                <tbody>
                <tr>
                    </td>
                      <td>
                      {% for group in network.assigned_groups %}
                        {{macros.render_groupname(group)}}
                      {% endfor %}
                    </td>
                    <td>
                      {% for user in network.assigned_users %}
                        {{macros.render_username(user)}}
                      {% endfor %}
                    </td>
                  </tr>
                </tbody>
                </table>
          {% endcall%}

          {% call macros.create_card(title="Containers",additional_classes="card-info") %}
               <table class="table table-dark elevation-2 mb-3">
                <thead>
                  <tr>
                    <th>State</th>
                    <th>Name</th>
                    <th>IP</th>
                    <th>Disk Location</th>
                  </tr>
                </thead>
                <tbody>
                  {% for container in network.containers %}
                  <tr>
                    <td>{{ macros.render_container_state(container.get_status()) }}</td>
                    <td>{{ container.name }}</td>
                    <td>{{ container.ip }}</td>
                    <td>{{ container.files_location }}</td>
                  </tr>
                  {% endfor %}
                </table>
          {% endcall%}
        </div>
      </div>