{% from "_security_macros.jinja" import render_field_with_errors, render_field %}


{% extends "_base.jinja" %}

{% block navbar %}{% endblock navbar %}
{% block sidebar %}{% endblock sidebar %}
{% block footer %}{% endblock footer %}

{# Use the build in flask security forms #}

{% block content_header %}<h1>Login</h1>{% endblock content_header %}
{% block content %}
  <div class="container-fluid">
      <div class="row">
        <div class = "col">
          <div class="form-group w-25 small-box p-5 elevation-5">
            <form action="{{ url_for_security('login') }}" class="form" method="POST" name="login_user_form">
              {{ login_user_form.hidden_tag() }}
              <label>Username</label>
              {{ render_field_with_errors(login_user_form.email, class_="form-control elevation-2",label_="Username")}}
              <label>Password</label>
              {{ render_field_with_errors(login_user_form.password, class_="form-control elevation-2") }}
              <label>Remember me</label>
              {{ render_field_with_errors(login_user_form.remember) }}
              {{ render_field(login_user_form.next) }}
              {{ render_field(login_user_form.submit, class_="btn btn-primary elevation-2") }}
            </form>
            {% include "security/_menu.html" %}
          </div>
        </div>
      </div>

  </div>
{% endblock content %}
