{% extends "_base.jinja" %}
{% block content_header %}<h1>Dashboard</h1>{% endblock content_header %}
{% block content %}
  <div class="container-fluid">

    <div class="col">
      <div class="row">
        
      </div>
      <!-- /row -->

      <div class="row">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Command</th>
            </tr>
          </thead>
          <tbody>
            {% for network in current_user.assigned_networks %}
            <tr>
              <td>{{ network.name }}</td>
              <td>{{ network.get_connection_command(current_user) }}</td>
              <td><button class="btn btn-danger control-button"><i class="fas fa-trash-alt"></i></button></td>
            </tr>
            {% else %}
            <tr>
              <td>There are no running networks</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <!-- /row -->

    </div>
    <!-- /col -->
  </div>
  <!-- /container-fluid -->
{%endblock content %}